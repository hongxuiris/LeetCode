class Solution:
    def replaceElements(self, arr: List[int]) -> List[int]:
        if not arr: return []
        len_arr = len(arr)
        if len_arr == 1: return [-1]
        for i in range(len_arr-1):
            arr[i] = max(arr[i+1: len_arr])
        arr[len_arr-1] = -1
        
        return arr
            
